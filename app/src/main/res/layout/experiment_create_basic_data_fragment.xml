<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.jsm.exptool.ui.experiments.create.ExperimentCreateBasicDataViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView style="@style/BaseCardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/experimentDataTitleTV"
                            android:text="Datos del experimento"
                            style="@style/BaseCardTitleTextView" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/BaseTextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:hint="Nombre"
                                android:inputType="textShortMessage"
                                android:text="@={viewModel.title}"
                                style="@style/BaseTextInputEditText" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/BaseTextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:hint="Descripción"
                                android:inputType="textMultiLine"
                                android:text="@={viewModel.description}"
                                style="@style/BaseTextInputEditText"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/BaseCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/experimentMultimediaTitleTV"
                            style="@style/BaseCardTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Multimedia" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchCamera"
                            style="@style/BaseSwitch"
                            android:checked="@={viewModel.cameraEnabled}"
                            android:text="Cámara" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchAudio"
                            style="@style/BaseSwitch"
                            android:checked="@={viewModel.audioEnabled}"
                            android:text="Audio" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/BaseCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/experimentSensorsTitleTV"
                            style="@style/BaseCardTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sensores" />


                        <Button
                            android:id="@+id/select_sensors_button"
                            style="@style/BaseButton"
                            android:layout_gravity="center"
                            android:onClick="@{() -> viewModel.selectSensorsButtonClicked(sensorSpinner)}"
                            android:text="Seleccionar sensores" />

                        <com.jsm.exptool.libs.MultiSpinner
                            android:id="@+id/sensorSpinner"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="Seleccionar sensores"
                            android:minHeight="48dp"
                            android:spinnerMode="dialog">

                        </com.jsm.exptool.libs.MultiSpinner>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="128dp">



                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/elementsRV"
                                    style="@style/RecyclerView"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:minHeight="128dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:listitem="@layout/experiments_list_item">

                                </androidx.recyclerview.widget.RecyclerView>

                            <TextView
                                android:id="@+id/empty"
                                style="@style/TextViewNoItems"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/default_recyclerview_emptyMessage"
                                android:visibility="@{viewModel.textEmptyVisibility ? View.VISIBLE : View.GONE}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>