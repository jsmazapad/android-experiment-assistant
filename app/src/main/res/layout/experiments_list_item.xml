<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/bottom_border_background"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/itemLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTV"
            style="@style/BaseItemListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Titulo de prueba" />

        <TextView
            android:id="@+id/descriptionTV"
            style="@style/BaseItemListSecondaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Description, tagline" />

        <TextView
            android:id="@+id/dateTV"
            style="@style/BaseItemListSecondaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Fecha de inicio"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagesIV"
                style="@style/BaseIcon"
                android:contentDescription="Tiene imágenes"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <ImageView
                android:id="@+id/soundsIV"
                style="@style/BaseIcon"
                android:contentDescription="Tiene sonidos"
                app:srcCompat="@android:drawable/presence_audio_away" />

            <ImageView
                android:id="@+id/embeddingIV"
                style="@style/BaseIcon"
                android:contentDescription="Tiene embedding de imágenes"
                app:srcCompat="@drawable/ic_baseline_cloud_24" />

            <ImageView
                android:id="@+id/sensorsIV"
                style="@style/BaseIcon"
                android:contentDescription="Tiene sensores" />

            <ImageView
                android:id="@+id/syncIV"
                style="@style/BaseIcon"
                android:contentDescription="@string/camera_position_configuration_content_description" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemLL">

        <TextView
            android:id="@+id/lengthTV"
            style="@style/BaseItemListSecondaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Fecha de inicio" />

        <ImageView
            android:id="@+id/syncPendingIV"
            style="@style/BaseIcon"
            android:contentDescription="sync pending"
            app:srcCompat="@android:drawable/ic_popup_sync"
            app:tint="#F44336" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>