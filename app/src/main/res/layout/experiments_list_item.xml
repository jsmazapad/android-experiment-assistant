<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseListItemRootElement"
    android:background="@drawable/bottom_border_background"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/itemLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="5dp">

        <TextView
            android:id="@+id/titleTV"
            style="@style/BaseItemListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Titulo de prueba" />

        <TextView
            android:id="@+id/descriptionTV"
            style="@style/BaseItemListSecondaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:minLines="0"
            tools:text="Description, tagline" />

        <TextView
            android:id="@+id/dateTV"
            style="@style/BaseItemListSecondaryBoldTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:lines="1"
            android:maxLines="1"
            android:minLines="0"
            tools:text="Fecha de inicio" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagesIV"
                style="@style/BaseIcon"
                android:contentDescription="Tiene imágenes"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <ImageView
                android:id="@+id/soundsIV"
                style="@style/BaseIcon"
                android:contentDescription="Tiene sonidos"
                app:srcCompat="@android:drawable/presence_audio_away" />

            <ImageView
                android:id="@+id/embeddingIV"
                style="@style/BaseIcon"
                android:contentDescription="Tiene embedding de imágenes"
                app:srcCompat="@drawable/ic_baseline_cloud_24" />

            <ImageView
                android:id="@+id/sensorsIV"
                style="@style/BaseIcon"
                android:contentDescription="Tiene sensores"
                app:srcCompat="@drawable/ic_baseline_edgesensor_high_24" />

            <ImageView
                android:id="@+id/syncIV"
                style="@style/BaseIcon"
                android:contentDescription="@string/camera_position_configuration_content_description"
                app:srcCompat="@drawable/ic_baseline_cloud_sync_24" />

            <ImageView
                android:id="@+id/syncPendingIV"
                style="@style/BaseIcon"
                android:contentDescription="sync pending"
                app:srcCompat="@drawable/ic_baseline_sync_problem_24" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/sizeTV"
        style="@style/BaseItemListSecondaryTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        tools:text="0MB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemLL" />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemLL">

        <TextView
            android:id="@+id/lengthTV"
            style="@style/BaseItemListSecondaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="15m" />

        <TextView
            android:id="@+id/statusTV"
            style="@style/BaseItemListSecondaryBoldTextView"
            android:background="@color/primaryDarkColor"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Creado" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>