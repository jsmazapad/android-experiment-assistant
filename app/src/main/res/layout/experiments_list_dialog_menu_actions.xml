<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_dialog_layout_design_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchSensorGlobalFrequency"
        style="@style/BaseSwitch"
        android:text="@string/use_default_frequency" />

    <LinearLayout
        android:id="@+id/frequencySelectorLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/frequencySelectorIncluded"
            layout="@layout/view_layout_frequency_selector" />

    </LinearLayout>
</LinearLayout>