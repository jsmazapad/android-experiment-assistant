<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.jsm.exptool.ui.experiments.list.ExperimentsDialogActionsViewModel" />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/custom_dialog_layout_design_user_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/titleTV"
            style="@style/BaseSubtitleTextView"
            tools:text="Título" />

        <TextView
            android:id="@+id/descriptionTV"
            style="@style/BaseSubtitleNegativeTextView"
            tools:text="Descripción del experimento realizado" />

        <com.jsm.exptool.libs.ExpandableCard
            style="@style/BaseCardView"
            android:layout_margin="0dp"
            app:extra_info="Expandir para ver resumen del experimento"
            app:initial_expanded="true"
            app:title="Resumen del experimento">

            <TextView
                style="@style/BaseSubtitleNegativeTextView"
                android:text="Sensores" />

            <LinearLayout
                style="@style/PaddedBorderBackground">

                <TextView
                    android:id="@+id/hasSensors"
                    style="@style/LinearGravityNoWidthLeftTextView"
                    android:layout_weight="1"
                    tools:text="Si" />

                <TextView
                    android:id="@+id/numSensors"
                    style="@style/LinearGravityWrapContentRightTextView"
                    tools:text="16 registros" />
            </LinearLayout>

            <TextView
                style="@style/BaseSubtitleNegativeTextView"
                android:text="Comentarios" />

            <LinearLayout
                style="@style/PaddedBorderBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hasComments"
                    style="@style/LinearGravityNoWidthLeftTextView"
                    android:layout_weight="1"
                    tools:text="Si" />

                <TextView
                    android:id="@+id/numComments"
                    style="@style/LinearGravityWrapContentRightTextView"
                    tools:text="16 registros" />
            </LinearLayout>

            <TextView
                style="@style/BaseSubtitleNegativeTextView"
                android:text="Imágenes" />

            <LinearLayout
                style="@style/PaddedBorderBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hasImages"
                    style="@style/LinearGravityNoWidthLeftTextView"
                    android:layout_weight="1"
                    tools:text="Si" />

                <TextView
                    android:id="@+id/numImages"
                    style="@style/LinearGravityWrapContentRightTextView"
                    tools:text="16 registros" />
            </LinearLayout>

            <TextView
                style="@style/BaseSubtitleNegativeTextView"
                android:text="Embedding" />

            <LinearLayout
                style="@style/PaddedBorderBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hasEmbedding"
                    style="@style/LinearGravityNoWidthLeftTextView"
                    android:layout_weight="1"
                    tools:text="Si" />

                <TextView
                    android:id="@+id/numEmbedding"
                    style="@style/LinearGravityWrapContentRightTextView"
                    tools:text="16 registros" />
            </LinearLayout>

            <TextView
                style="@style/BaseSubtitleNegativeTextView"
                android:text="Audio" />

            <LinearLayout
                style="@style/PaddedBorderBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hasAudio"
                    style="@style/LinearGravityNoWidthLeftTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="Si" />

                <TextView
                    android:id="@+id/numAudio"
                    style="@style/LinearGravityWrapContentRightTextView"
                    android:layout_width="wrap_content"
                    android:textAlignment="textEnd"
                    tools:text="16 registros" />
            </LinearLayout>
        </com.jsm.exptool.libs.ExpandableCard>

        <Button
            android:id="@+id/initExperimentButton"
            style="@style/FullWidthButton"
            android:text="Iniciar experimento" />

        <Button
            android:id="@+id/seeDataButton"
            style="@style/FullWidthButton"
            android:text="Ver datos" />

        <Button
            android:id="@+id/exportDataButton"
            style="@style/FullWidthButton"
            android:text="Exportar datos" />

        <LinearLayout
            android:id="@+id/syncLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/DialogPaddedTextView"
                android:text="¿Parece que faltan elementos por sincronizar, desea sincronizar los datos con el servidor?" />

            <Button
                android:id="@+id/syncButton"
                style="@style/FullWidthButton"
                android:text="Sincronizar datos" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/endLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/DialogPaddedTextView"
                android:text="¿Parece que el experimento no finalizó correctamente, ¿desea finalizarlo?, si por el contrario desea continuar pulse sobre el botón ampliar experimento?" />

            <Button
                android:id="@+id/endExperimentButton"
                style="@style/FullWidthButton"
                android:text="Dar por finalizado" />
        </LinearLayout>

        <Button
            android:id="@+id/continueExperimentButton"
            style="@style/FullWidthButton"
            android:text="Ampliar experimento" />

        <Button
            android:id="@+id/deleteExperimentButton"
            style="@style/FullWidthButton"
            android:text="Eliminar experimento" />

        <Button
            android:id="@+id/copyExperimentButton"
            style="@style/FullWidthButton"
            android:text="Crear experimento nuevo con la misma configuración" />
    </LinearLayout>
</ScrollView>
</layout>