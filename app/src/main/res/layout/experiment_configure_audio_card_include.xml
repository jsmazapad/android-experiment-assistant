<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audioCard"
    style="@style/BaseCardView"
    tools:showIn="@layout/experiment_create_configure_data_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/audioCardTitleTV"
                style="@style/BaseCardTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/audio" />

            <TextView
                android:id="@+id/audioFrequencyTV"
                style="@style/BaseCardTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{String.valueOf(viewModel.audioFreqValue)}"
                android:textAlignment="textEnd"
                tools:text="0ms" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/BaseItemListSecondaryBoldTextView"
                    android:text="@{viewModel.audioRecordOptionTitle)}"/>
                <TextView
                    style="@style/BaseItemListSecondaryBoldTextView"
                    android:text="@{viewModel.audioRecordBitRate)}"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    style="@style/FrequencyButton"
                    android:layout_width="wrap_content"
                    android:contentDescription="@string/camera_frequency_configuration_content_description"
                    android:onClick="@{() -> viewModel.onAudioSelectFrequency(context)}" />

                <ImageButton
                    style="@style/SettingsButton"
                    android:layout_width="wrap_content"
                    android:contentDescription="@string/camera_settings_configuration_content_description"
                    android:onClick="@{() -> viewModel.onAudioSelectConfiguration(context)}"
                    android:src="@drawable/ic_baseline_settings_24" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>