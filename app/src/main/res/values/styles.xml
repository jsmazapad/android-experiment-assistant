<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AccesibilityMinSize">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>

    </style>

    <style name="BaseCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="BaseCardTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="BaseTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="boxStrokeColor">?colorSecondaryVariant</item>
        <item name="hintTextColor">?colorSecondaryVariant</item>
    </style>

    <style name="BaseTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="BaseSwitch" parent="AccesibilityMinSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="BaseButton" parent="AccesibilityMinSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="FullWidthButton" parent="AccesibilityMinSize">
        <item name="android:layout_width">match_parent</item>


    </style>

    <style name="BaseIcon" parent="AccesibilityMinSize">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="tint">?colorSecondaryVariant</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BaseItemListTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>