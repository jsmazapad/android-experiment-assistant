<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AccesibilityMinSize">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>

    </style>

    <style name="BaseCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">3dp</item>

        <item name="cardElevation">5dp</item>
        <item name="contentPaddingBottom">10dp</item>
<!--        <item name="contentPadding">10dp</item>-->
<!--        <item name="paddingStart">0dp</item>-->
<!--        <item name="cardPreventCornerOverlap">false</item>-->

        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="BaseCardTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="BaseCardTitleItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/card_header_text</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/card_header</item>
        <item name="fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="BaseCardTitleTextView.TitleItem" parent="BaseCardTitleItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="BaseCardContentItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:paddingStart">10dp</item>-->
<!--        <item name="android:paddingBottom">10dp</item>-->
    </style>

    <style name="BaseTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="boxStrokeColor">?colorSecondary</item>
        <item name="hintTextColor">?colorSecondary</item>
        <item name="android:textColorHint">#111111</item>
    </style>

    <style name="BaseTextInputEditText" parent="AccesibilityMinSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColorHint">#111111</item>

    </style>
    <style name="BaseSwitch" parent="AccesibilityMinSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="SecondarySwitch" parent="BaseSwitch">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">20dp</item>


    </style>
    <style name="BaseButton" parent="AccesibilityMinSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>

    </style>
    <style name="FullWidthButton" parent="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="BaseIcon" parent="AccesibilityMinSize">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="tint">@color/secondaryDarkColor</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BaseWhiteIcon" parent="BaseIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="tint">@color/white</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BaseItemListTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="BaseItemListSecondaryTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="BaseItemListSecondaryBoldTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">sans-serif-smallcaps</item>
    </style>


    <style name="BaseSlider" parent="AccesibilityMinSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stepSize">100</item>

    </style>

    <style name="BaseImageButton" parent="AccesibilityMinSize">
        <item name="android:layout_width">48dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="FrequencyButton" parent="BaseImageButton" >
        <item name="srcCompat">@drawable/ic_baseline_av_timer_24</item>
    </style>

    <style name="DurationButton" parent="BaseImageButton" >
        <item name="srcCompat">@drawable/ic_baseline_timer_24</item>
    </style>

    <style name="SettingsButton" parent="FrequencyButton">
        <item name="android:contentDescription">Configurar c√°mara</item>
    </style>

    <style name="BaseSubtitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?colorSecondary</item>
        <item name="android:textColor">@color/subtitle_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BaseSubtitleNegativeTextView" parent="BaseSubtitleTextView">
        <item name="android:background">@color/subtitle_text</item>
        <item name="android:textColor">?colorPrimaryDark</item>
    </style>

    <style name="BaseSpinner" parent="AccesibilityMinSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnerMode">dialog</item>

    </style>

    <style name="BaseLinearLayoutFromNestedScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BaseNestedLayoutInsideFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">7dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="BaseListItemRootElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="DeleteIcon" parent="BaseIcon">
        <item name="android:contentDescription">@string/delete_content_description</item>
        <item name="android:src">@drawable/ic_baseline_delete_forever_24</item>
    </style>

    <style name="EditIcon" parent="BaseIcon">
        <item name="android:contentDescription">@string/edit_content_description</item>
        <item name="android:src">@drawable/ic_baseline_settings_24</item>
    </style>

    <style name="BorderBackground">
        <item name="android:background">@drawable/all_border_background</item>
    </style>


    <style name="LinearNoWidthLeftItem" parent="BaseCardTitleTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/card_header_text</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LinearWrapContentRightItem" parent="BaseCardTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/card_header_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">5dp</item>

    </style>

    <style name="LinearGravityNoWidthLeftTextView" parent="LinearNoWidthLeftItem">
        <item name="android:textColor">@color/text_default_color</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="LinearGravityWrapContentRightTextView" parent="LinearWrapContentRightItem">
        <item name="android:textColor">@color/text_default_color</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="LinearGravityWrapContentIcon" parent="BaseIcon">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="LinearGravityWrapContentOneElement" parent="LinearGravityWrapContentRightTextView">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="LinearGravityWrapContentOneElementTitle" parent="LinearGravityWrapContentOneElement">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_header_variant</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="ExpandableCardIcon" parent="AccesibilityMinSize">
        <item name="android:layout_width">48dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="tint">@color/white</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ExpandableCardExtraInfo" parent="BaseItemListSecondaryTextView">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="DialogPaddedTextView" parent="BaseItemListSecondaryBoldTextView">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="PaddedBorderBackground" parent="BorderBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="ExperimentViewCol1" parent="BaseItemListSecondaryBoldTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="ExperimentViewCol2" parent="BaseItemListSecondaryBoldTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">0dp</item>

    </style>

    <style name="ExperimentViewCol2ShortHeader" parent="ExperimentViewCol2">
        <item name="android:layout_weight">1.5</item>
    </style>

    <style name="ExperimentViewCol2ImageView" parent="ExperimentViewCol2ShortHeader">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="ExperimentViewCol3" parent="BaseItemListSecondaryBoldTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>

    </style>

    <style name="ExperimentViewCol3ImageView" parent="ExperimentViewCol3">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="SectionTitle" parent="BaseItemListSecondaryBoldTextView">
        <item name="android:background">@color/card_header</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>


</resources>